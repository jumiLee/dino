<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="userAP"> 

	<resultMap id="userAPList" type="first.vassystem.dto.UserAP">
 		<result property = "maxAP" column = "max_ap"/>
 		<result property = "curAP" column = "cur_ap"/>
	</resultMap>

	<select id="selectUserAP" statementType="CALLABLE" parameterType="int" resultMap ="userAPList"> 
		select max_ap, cur_ap 
		  from user_ap
		 where user_account = #{user_account,mode=IN,jdbcType=INTEGER}
		   and ap_type=1
	</select>
</mapper>